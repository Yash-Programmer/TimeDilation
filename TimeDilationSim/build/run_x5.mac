# Run macro for Station 2 at x = 5 m
# Use: ./TimeDilationSim run_x5.mac
# Output: TimeDilation_Run1.csv

# Verbose level
/run/verbose 1
/event/verbose 0
/tracking/verbose 0

# Set Station 2 position to 5 m
/det/setStation2Pos 5 m

# Initialize the simulation
/run/initialize

# Print configuration
/run/printProgress 100

# Run production events (10000 events for statistics)
/run/beamOn 10000
