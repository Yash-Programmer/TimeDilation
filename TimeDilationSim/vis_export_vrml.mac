# VRML Export Macro
# Generates 3D VRML file viewable in web browsers

/run/initialize

# Open VRML2FILE driver
/vis/open VRML2FILE

# Draw geometry
/vis/drawVolume

# Set viewpoint
/vis/viewer/set/viewpointVector 1 0.5 0.5
/vis/viewer/set/lightsVector -1 0 0
/vis/viewer/set/upVector 0 0 1

# Add trajectories
/vis/scene/add/trajectories smooth
/vis/modeling/trajectories/create/drawByParticleID
/vis/modeling/trajectories/drawByParticleID-0/set pi+ red
/vis/modeling/trajectories/drawByParticleID-0/set kaon+ blue
/vis/modeling/trajectories/drawByParticleID-0/set mu+ green
/vis/modeling/trajectories/drawByParticleID-0/set opticalphoton yellow

# Add axes
/vis/scene/add/axes 0 0 0 2 m

# Configure Station 2 position
/det/setStation2Pos 15 m

# Run events
/run/beamOn 20

# Flush viewer
/vis/viewer/flush

exit
